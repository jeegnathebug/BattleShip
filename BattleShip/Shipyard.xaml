<UserControl x:Class="BattleShip.Shipyard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleShip"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="280">
    <Grid>
        <Label x:Name="labelShipyard" Content="Shipyard" HorizontalAlignment="Center" Margin="0,12,0,0" VerticalAlignment="Top" FontSize="18.667"/>
        <Image x:Name="shipAircraftCarrier" HorizontalAlignment="Left" Height="40" Margin="25,55,0,0" VerticalAlignment="Top" Width="220"/>
        <Image x:Name="shipBattleship" HorizontalAlignment="Left" Height="40" Margin="25,100,0,0" VerticalAlignment="Top" Width="175"/>
        <Image x:Name="shipSubmarine" HorizontalAlignment="Left" Height="40" Margin="25,145,0,0" VerticalAlignment="Top" Width="130"/>
        <Image x:Name="shipCruiser" HorizontalAlignment="Left" Height="40" Margin="25,190,0,0" VerticalAlignment="Top" Width="130"/>
        <Image x:Name="shipDestroyer" HorizontalAlignment="Left" Height="40" Margin="25,235,0,0" VerticalAlignment="Top" Width="85"/>
    </Grid>
</UserControl>
