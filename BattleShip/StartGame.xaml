<UserControl x:Class="BattleShip.StartGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleShip"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="210">
    <Grid>
        <Button x:Name="buttonStart" Content="Play" HorizontalAlignment="Center" Height="42" Margin="0,218,0,0" Click="buttonStart_Click" Width="95" VerticalAlignment="Top"/>
        <Label x:Name="labelDifficulty" Content="Choose Difficulty" HorizontalAlignment="Center" Margin="55,95,55,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radioButtonEasy" Content="Easy" GroupName="difficulty" Margin="65,126,0,0" VerticalAlignment="Top" IsChecked="True" HorizontalAlignment="Left" Width="39"/>
        <RadioButton x:Name="radioButtonMedium" Content="Medium" GroupName="difficulty" Margin="65,147,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="60"/>
        <RadioButton x:Name="radioButtonHard" Content="Hard" GroupName="difficulty" Margin="65,168,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="42"/>
        <Label x:Name="labelWelcome" Content="Welcome to Battleship" HorizontalAlignment="Center" Margin="40,20,40,0" VerticalAlignment="Top"/>
        <Label x:Name="labelName" Content="Enter name" HorizontalAlignment="Left" Margin="58,46,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Height="23" Margin="55,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
    </Grid>
</UserControl>
